{
    "name": "Waver",
    "manifest_version": 2,
    "version": "1.0",
    "description": "Waver, control your buying habits and get the things you want.",
    "browser_action": {
        "default_title": "Waver",    
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "css": ["./dist/public.bundle.css"],
          "js": ["./dist/public.bundle.js"],
          "all_frames": true,
          "run_at": "document_end"
        }
      ],
    "permissions": [
        "tabs",
        "<all_urls>"
    ]
    
  }